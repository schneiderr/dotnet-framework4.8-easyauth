@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>@(User.Identity.Name)</h1>
    @* <p class="lead">ID Token : </p>
    <p class="lead">Access Token : @(ViewBag.IDToken)</p> *@
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>ID Token</h2>
        <p>@(ViewBag.IDToken)</p>
    </div>
    <div class="col-md-4">
        <h2>Access Token</h2>
        <p>@(ViewBag.AccessToken)</p>
    </div>
        <div class="col-md-4">
        <h2>Refresh Token</h2>
        <p>@(ViewBag.RefreshToken)</p>
    </div>
</div>